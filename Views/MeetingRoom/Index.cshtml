@model IEnumerable<MeetingRoomViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Meeting rooms</h1>

<p>
    <a class="btn btn-sm btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@item.Id">Edit</a> 
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>  
                    <a class="btn btn-sm btn-success" asp-controller="Meeting" asp-action="Create" asp-route-meetingRoomId="@item.Id">Add new meeting</a>
                </td>
            </tr>
        }
    </tbody>
</table>
